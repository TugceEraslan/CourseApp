<body>

    <form asp-controller="Course" asp-action="Apply" method="POST">
        @*Tag helpers apply in zaten course controller içine bağlı bir view olduğu için için*@

        <p>
            <label asp-for="Name">Adınız: </label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </p>

        <p>
            <label asp-for="Email">Eposta: </label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </p>

        <p>
            <label asp-for="Phone">Telefon: </label>
            <input asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </p>

        <p>
            <label asp-for="Confirm">Kursa katılacak mısınız? </label>
            <select asp-for="Confirm">
                <option value=""> Seçiniz:</option>
                <option value="true"> Evet, geliyorum</option>
                <option value="false"> Hayır, gelmiyorum</option>
            </select>
        </p>

        <input type="submit" value="Submit" />

    </form>

